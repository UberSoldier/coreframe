<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>coreframe</artifactId>
        <groupId>czf.coreframe</groupId>
        <version>${coreframe.version}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>core-shiro</artifactId>
    <packaging>war</packaging>
    <description>shiro 模块</description>
    <name>core-shiro</name>

    <dependencies>
        <dependency>
            <groupId>czf.coreframe</groupId>
            <artifactId>core-service</artifactId>
            <version>${coreframe.version}</version>
        </dependency>
        <dependency>
            <groupId>czf.coreframe</groupId>
            <artifactId>core-redis</artifactId>
            <version>${coreframe.version}</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>core-shiro</finalName>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>tomcat-maven-plugin</artifactId>
                <version>1.1</version>
                <configuration>
                    <path>/core-admin</path>
                    <port>8080</port>
                    <uriEncoding>UTF-8</uriEncoding>
                    <url>http://localhost:8080/core-admin/</url>
                    <server>tomcat7</server>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.mybatis.generator</groupId>
                <artifactId>mybatis-generator-maven-plugin</artifactId>
                <version>1.3.2</version>
                <configuration>
                    <verbose>true</verbose>
                    <overwrite>true</overwrite>
                </configuration>
            </plugin>
            <!-- mvn install 跳过单元测试 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <!-- true:跳过测试 -->
                    <skip>true</skip>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>